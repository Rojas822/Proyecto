<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <div class="card-header">Modificacion Docente</div>
        <div class="ca"></div>
        <form action="docente/update/<%= data.idDocente %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombresDocente" value="<%= data.nombresDocente%>" placeholder="Nombres" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="apellidosDocente" value="<%= data.apellidosDocente%>" placeholder="Apellidos" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="contraseñaDocente" value="<%= data.contraseñaDocente%>" placeholder="Contraseña" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Cambios
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
