<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Nombres</td>
            <td>Apellidos</td>
            <td>Contraseña</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].nombresEstudiante %></td>
                <td><%= data[i].apellidosEstudiante %></td>
                <td><%= data[i].contraseñaEstudiante %></td>
                <td>
                  <a href="estudiante/update/<%= data[i].idEstudiante %>" class="btn btn-info">Edit</a>
                  <a href="estudiante/delete/<%= data[i].idEstudiante %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <div class="card-header">Creacion Estudiante</div>
        <form action="estudiante/add" method="POST">
          <div class="form-group">
            <input type="text" name="nombresEstudiante" placeholder="Nombres" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="apellidosEstudiante" placeholder="Apellidos" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="contraseñaEstudiante" placeholder="Contraseña" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Crear Estudiante 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
