<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <div class="card-header">Creacion Estudiante</div>
        <form action="/updateestudiante/<%= data.idEstudiante %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombresEstudiante" value="<%= data.nombresEstudiante%>" placeholder="Nombres" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="apellidosEstudiante" value="<%= data.apellidosEstudiante%>" placeholder="Apellidos" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="contraseñaEstudiante" value="<%= data.contraseñaEstudiante%>" placeholder="Contraseña" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Cambios
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
